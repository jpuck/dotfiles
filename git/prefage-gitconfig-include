[core]
	editor = nano -w
	pager = less --tabs=4
[push]
	default = upstream
[merge]
	conflictstyle = diff3
[alias]
	b  = branch -avv
	r  = remote -v
	l  = log --graph --format='%C(auto)%h %s%d %Cgreen%cr'
	la = !git l --all
	lb = !git l --branches
	dc = diff --cached
	skipped = !git ls-files -v | grep "^S"
[color]
	ui = true
[advice]
	statusHints = off
