[core]
	editor = nano -w
	pager = less --tabs=4
[push]
	default = upstream
[merge]
	conflictstyle = diff3
[alias]
	b  = branch -avv
	r  = remote -v
	l  = log --graph --oneline --decorate
	la = log --graph --oneline --decorate --all
	lb = log --graph --oneline --decorate --branches
	dc = diff --cached
	skipped = !git ls-files -v | grep "^S"
[color]
	ui = true
[advice]
	statusHints = off
